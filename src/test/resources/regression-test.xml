<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name=" MakeMyTrip Regression Suite" verbose="2">
	<test thread-count="3" name="Regression Test: Chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="tests.LowCabFareTests">
				<methods>
					<include name="testVisitMakeMyTrip" />
					<include name="testHandleModal" />
				</methods>
			</class>
			<class name="tests.GiftCardTests">
				<methods>
					<include name="testVisitMakeMyTrip" />
				</methods>
			</class>
			<class name="tests.BookHotelTests">
				<methods>
					<include name="testVisitMakeMyTrip" />
					<include name="testHandleModal" />
					<include name="testClickHotelBtn" />
				</methods>
			</class>
		</classes>
	</test> <!-- Test -->
	<test thread-count="3" name="Regression Test: Edge">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="tests.LowCabFareTests">
				<methods>
					<include name="testVisitMakeMyTrip" />
					<include name="testHandleModal" />
				</methods>
			</class>
			<class name="tests.GiftCardTests">
				<methods>
					<include name="testVisitMakeMyTrip" />
				</methods>
			</class>
			<class name="tests.BookHotelTests">
				<methods>
					<include name="testVisitMakeMyTrip" />
					<include name="testHandleModal" />
					<include name="testClickHotelBtn" />
				</methods>
			</class>
		</classes>
	</test> <!-- Test -->
</suite> <!-- Suite -->